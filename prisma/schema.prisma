// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ⬅️ CAMBIO: antes decía "sqlite"
  url      = env("DATABASE_URL") // usa la URL de Neon
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  hash      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  cases     Case[]
}

enum Role {
  USER
  PARALEGAL
  ADMIN
}

enum CaseType {
  I589
  I765
}

enum CaseStatus {
  DRAFT
  READY_FOR_REVIEW
  FILED
  REJECTED
  APPROVED
}

model Case {
  id        String     @id @default(cuid())
  type      CaseType
  status    CaseStatus @default(DRAFT)
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  data      Json
  files     Evidence[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Evidence {
  id         String   @id @default(cuid())
  caseId     String
  case       Case     @relation(fields: [caseId], references: [id])
  key        String
  name       String
  mime       String
  size       Int
  uploadedAt DateTime @default(now())
}
